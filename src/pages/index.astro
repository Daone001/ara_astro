---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Showcase from '../components/Showcase.astro';
import HomeOverview from '../components/HomeOverview.astro';
import HomeBlogPreview from '../components/HomeBlogPreview.astro';
import CardBtn from '../components/CardBtn.astro';
---

<Layout title="Ara Global Technology">
	<Navbar 
		showcase={true}
		/>
	<Showcase 
		showcase={true}
		showcaseLink="/"
	/>
	<HomeOverview />
	<HomeBlogPreview />
	<CardBtn 
	 title='Projects'
	 body='View the different projects completed by Ara Global Technology. These includes live and demo applications created by our developers with different industries in mind.'
	 href='/projects'
	 linkTitle='Projects'
	/>
	
</Layout>

<style>

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	
</style>

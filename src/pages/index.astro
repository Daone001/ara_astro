---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Showcase from '../components/Showcase.astro';
import HomeOverview from '../components/HomeOverview.astro';
import HomeBlogPreview from '../components/HomeBlogPreview.astro';
import CardBtn from '../components/CardBtn.astro';
---

<Layout title="Ara Global Technology">
  <Navbar showcase={true} />
  <Showcase showcase={true} showcaseLink="/services" />
  <HomeOverview />
  <HomeBlogPreview />
  <CardBtn
    title="Projects"
    body="Visit our projects page which hosts a few of the projects Ara Global Technology developers have worked on over the years."
    href="/projects"
    linkTitle="Projects"
  />
</Layout>

<style>
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>

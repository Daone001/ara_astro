---
export interface Props {
  status?: Boolean,
  check?: String,
  ex?: String
}
const {status, check="done", ex="close"} = Astro.props;
---

<td class="icons">
{status ? <span class="material-icons table-check">{check}</span>
<style>
  span.table-check {
    font-size: 28px;
    font-weight: bold;
    color: #2C7865;
  }
  @media screen and (max-width: 636px) {
  span.table-check {
    font-size: 14px;
  }
}
</style>
 : <span class="material-icons table-ex">{ex}</span>
 <style>
  span.table-ex {
    font-size: 28px;
    font-weight: bold;
    color: #A0153E;
  }

@media screen and (max-width: 636px) {
  span.table-ex {
    font-size: 14px;
  }
}
</style>
 
 }

</td>
<style>
  .icons {
    text-align: center;
  }
  td {
    padding: 15px;
      border-collapse: collapse;
      background: rgba( 18, 50, 89, 0.25 );
      box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
      backdrop-filter: blur( 4px );
      -webkit-backdrop-filter: blur( 4px );
      border-radius: 10px;
      border: 1px solid rgba( 255, 255, 255, 0.18 );
  }
</style>
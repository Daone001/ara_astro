---
export interface Props {
  icon?: string;
  title?: string;
  body?: string;
}
const {icon, title, body} = Astro.props;
---
<div class="card">
  <div class="card-content">
    <span class="material-icons">{icon}</span>
    <h3 class="card-title">{title}</h3>
    <p class="small-card-text">
      {body}
    </p>
  </div>
</div>

<style>
  .card-content {
    background-color: #0F6292;
    color: #fff;
    padding: 40px 20px;
    margin: 30px 0;
    width: 300px;
    border-radius: 8px;
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.20);
    text-align: center;
  }
  .card-content span {
    border: 2px solid #fff;
    border-radius: 50%;
    font-size: 4rem;
    text-align: center;
    height: 85px;
    width: 85px;
  }
  .card-title {
    margin: 15px 0;
    font-size: 25px;
  }
  .small-card-text {
    text-align: left;
  }
  @media screen and (max-width: 636px) {
    .card-content {
      width: 100%;
    }
    .card-content span {
   font-size: 2.5rem;
    text-align: center;
  }
  }
</style>